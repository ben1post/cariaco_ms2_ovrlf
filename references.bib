@article{vascotto_phytoplankton_2021,
	title = {Phytoplankton {Time}-{Series} in a {LTER} {Site} of the {Adriatic} {Sea}: {Methodological} {Approach} to {Decipher} {Community} {Structure} and {Indicative} {Taxa}},
