	urldate = {2025-02-19},
	journal = {Deep Sea Research Part I: Oceanographic Research Papers},
	author = {Montes, Enrique and Muller-Karger, Frank and Thunell, Robert and Hollander, David and Astor, Yrene and Varela, Ramón and Soto, Inia and Lorenzoni, Laura},
